body, html {
    font: 16px / 1.4 Georgia, serif;
}

@media only screen and (max-width: 500px) {
    body, html {
        font: 14px / 1.4 Georgia, serif;
    }
}

.page {
    max-width: 400px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-select: none;
}

h1 {
    font: 2rem / 1.2 Georgia, serif;
    margin-bottom: 1em;
}

.tag {
    width: 100%;
    padding-bottom: 100%;
    background: #e5d6f6;
    margin-bottom: 1.5rem;
    position: relative;

    .item {
        position: absolute;
        left: 0;
        top: 0;
        width: 25%;
        height: 25%;
        padding: 0;
        margin: 0;
        border: none;
        background: #000;
        color: white;
        font-size: 2rem;
        cursor: pointer;
        transition: transform 0.2s, filter 0.5s;

        &Val {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 84%;
            height: 84%;
            margin: 8%;
            box-shadow: inset 0 0 0 2px #922ec5;
        }
    }

    &Win {
        .item {
            filter: brightness(200%);
        }
    }
}

.button {
    color: #fff;
    background: #000;
    font: 1.2rem / 1.4 Georgia, serif;
    border: none;
    cursor: pointer;
    padding: 0.5em 1.5em;

    &:hover {
        background: #922ec5;
    }
}

.game {
    &Shuffle {
        pointer-events: none;
        opacity: 0.8;
    }
}
