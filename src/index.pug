doctype html
html(lang="ru") 
    head
        meta(charset="utf-8")
        title Tag game
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="/css/reset.css")
        link(rel="stylesheet" href="/css/index.css")
    body
        - var values = new Array(16).fill(0).map((_, ind) => ++ind);
        .page
            h1 Tag Game
            .tag#tag
                each val in values
                    button.item(data-matrix-id=val)
                        span.itemVal=val
            button.button#shuffle Shuffle

        script(src="/js/index.js")
